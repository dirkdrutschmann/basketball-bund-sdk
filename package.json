{
  "name": "basketball-bund-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for the Basketball-Bund.net REST API",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./cjs": "./dist/cjs/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json && node scripts/add-js-extensions.js",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts'",
    "lint:fix": "eslint src/**/*.ts --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.spec.ts' --fix"
  },
  "keywords": [
    "basketball",
    "api",
    "sdk",
    "typescript",
    "basketball-bund",
    "sports",
    "german-basketball"
  ],
  "author": {
    "name": "Dirk Drutschmann",
    "email": "mail@drutschmann.dev",
    "url": "https://drutschmann.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddrutschmann/basketball-bund-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/ddrutschmann/basketball-bund-sdk/issues"
  },
  "homepage": "https://github.com/ddrutschmann/basketball-bund-sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 