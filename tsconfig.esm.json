{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./dist/esm",
    "declaration": false
  },
  "include": [
    "src/index.ts",
    "src/auth/**/*",
    "src/http/**/*",
    "src/services/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 